<div class="row gradient">
	<div class="col s12">
		<p id="impact">¡Invita a tu gente y ambos ganarán §3 cuando ellos usen Apretaste!</p>

		<div class="input-field">
			<input id="link" class="center-align" type="text" value="http://apretaste.me/join/<%= username %>" readonly/>
			<label for="link">Link de invitación</label>
		</div>

		<div class="center-align">
			<span class="fa-stack fa-2x" onclick="copy()">
				<i class="fas fa-circle fa-stack-2x green-text"></i>
				<i class="fas fa-copy fa-stack-1x fa-inverse"></i>
			</span>

			<% if(typeof apretaste.share != "undefined") { %>
				<span class="fa-stack fa-2x" onclick="share()">
					<i class="fas fa-circle fa-stack-2x grey-text"></i>
					<i class="fas fa-share-alt fa-stack-1x fa-inverse"></i>
				</span>
			<% } %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col s12">
		<% if(invited.length > 0 ) { %>
			<p class="center-align grey-text">Usuarios que aceptaron tu invitación</p>
			<ul class="collection one-line">
				<% invited.forEach(function(item) { %>
					<li class="collection-item avatar">
						<div class="person-avatar circle" face="<%= item.avatar %>" color="<%= item.avatarColor %>" size="40"></div>
						<p><a href="#!" class="black-text <%= item.gender %>" onclick="apretaste.send({command:'PERFIL', data:{username:'<%= item.username %>'}})">@<%= item.username %></a></p>
						<span class="chip clear tiny"><i class="far fa-calendar"></i> <%= moment(item.accepted).format("DD/MM/YYYY") %></span>
						<a href="#!" onclick="apretaste.send({command:'PERFIL', data:{username:'<%= item.username %>'}})" class="secondary-content"><i class="material-icons">arrow_forward</i></a>
					</li>
				<% }) %>
			</ul>
		<% } else { %>
			<p class="center-align grey-text">Nadie ha aceptado aún tu invitación</p>
		<% } %>
	</div>
</div>

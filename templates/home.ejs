<div class="row">
	<div class="col s12">
		<p id="impact">¡Invita a tu gente y ambos ganarán §3 cuando ellos usen Apretaste!</p>

		<div class="input-field">
			<input id="link" class="center-align" type="text" value="<%= link %>" readonly />
			<label for="link">Link de invitación</label>
		</div>

		<div class="center-align">
			<span class="fa-stack fa-2x" onclick="copy()">
				<i class="fas fa-circle fa-stack-2x green-text"></i>
				<i class="fas fa-copy fa-stack-1x fa-inverse"></i>
			</span>

			<span id="share" class="fa-stack fa-2x" onclick="share()">
				<i class="fas fa-circle fa-stack-2x grey-text"></i>
				<i class="fas fa-share-alt fa-stack-1x fa-inverse"></i>
			</span>
		</div>
	</div>
</div>
